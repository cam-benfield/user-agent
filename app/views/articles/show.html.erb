<% content_for :title do %>
  <%= @article.title %>
<% end %>

<% content_for :nav do %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
<% end %>

<% content_for :body do %>
  <h1><%= @article.title %></h1>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
<% end %>
