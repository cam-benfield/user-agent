<%= render template: "layouts/application" %>

  <% content_for :title do %>
    User Agent Parser
  <% end %>

  <% content_for :nav do %>
  <% end %>

  <% content_for :body do %>
    
    <!-- First Grid -->
    <div class="w3-row-padding w3-padding-64 w3-container">
        <div class="w3-content">
            <div class="w3-twothird">
                <h1>User Agents</h1>
                <h5 class="w3-padding-32">User Agents are best defined as the information sent to websites to identify devices, browsers, and features.</h5>
                <p class="w3-text-grey"><%= render "agent_info" %></p>
                <h5>If you were sent here by a support team, click here:</h5>
                <button class="w3-button w3-black w3-padding-large w3-large w3-margin-top">Create My Support Link</button> 
                <!--TODO: Create controller/everything for support links using /visitor-->
            </div>

            <div class="w3-third w3-center">
                <i class="fa fa-anchor w3-padding-64 w3-text-red"></i>
            </div>
        </div>
    </div>


    <!-- Second Grid -->
    <div class="w3-row-padding w3-light-grey w3-padding-64 w3-container">
        <div class="w3-content">
            <div class="w3-third w3-center">
                <i class="fa fa-coffee w3-padding-64 w3-text-red w3-margin-right"></i>
            </div>

            <div class="w3-twothird">
                <h1>Modern Browsers</h1>
                <h5 class="w3-padding-32">While there are a wide variety of browsers, the majority of users will use one of five browsers:</h5>
                <ul class="w3-text-grey">
                  <li><a href="/modern_browsers/1">Chrome</a></li>
                  <li><a href="/modern_browsers/2">Edge</a></li>
                  <li><a href="/modern_browsers/3">Firefox</a></li>
                  <li><a href="/modern_browsers/5">Safari</a></li>
                  <li><a href="/modern_browsers/4">Opera</a></li>
                </ul>
            </div>
        </div>
    </div>
  <% end %>
